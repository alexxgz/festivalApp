<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Julius+Sans+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <title>Artist Request</title>
</head>

<body>
    <header>
        <h1>REQUEST AN ARTIST</h1>
    </header>
    <nav class="artistNewNav">
        <a href="/">HOME</a>
        <a href="/artists">ALL ARTISTS</a>
        <a href="/artists/requests">REQUESTED ARTISTS</a>
    </nav>

    <section class="artistNewSection">
        <form class="artistNewForm" action="/artists/" method="POST">


            Name: <input type="text" name="djName" placeholder="EXCISION" />
            Genre: <input type="text" name="genre" placeholder="DUBSTEP" />
            Top Hits: <input type="text" name="topHits" placeholder="TOP HITS" />
            <!-- PLAYING AT: <input type="text" name="stage" placeholder="STAGE"> -->

            <select name='stage'>
                <option default>Select which stage they will be playing on</option>

                <% stages.forEach ( stage=> { %>
                    <option value="<%= stage._id %>">
                        <%= stage.stageName %>
                    </option>
                    <% }) %>
            </select>

            <input class="artistSubmit" type="submit" value="Request new Arist">

        </form>
    </section>

</body>

</html>